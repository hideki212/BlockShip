<div class="main">
    <br />
    <form action="http://localhost:/3000/ico/createuser" style="border:1px solid #ccc; background-color: white; width: 66%;
        margin-left: auto;
        margin-right: auto;">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter Company Name" name="company" required />
                </div>
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter address line 1" name="address"
                        required />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter address line 2" name="address2"
                        required />
                </div>
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter state Name" name="state" required />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter zip" name="zip" required />
                </div>
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter country Name" name="country" required />
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Enter phone" name="phone" required />
                </div>
                <div class="col-md-6">
                    <input class="btn btn-primary" type="submit" value="submit" style="margin-top: 5px;">
                </div>
            </div>
        </div>
</div>
</form>
</div>